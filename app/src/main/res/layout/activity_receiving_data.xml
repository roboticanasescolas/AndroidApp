<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.ufc.quixada.roboticaescolas.ReceivingData"
    android:weightSum="1">

    <EditText
        android:id="@+id/id_valor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Comando"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/id_enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:visibility="visible" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <Button
            android:id="@+id/fechar_guarra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:text="fechar" />

        <Button
            android:id="@+id/meio_aberto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:text="meia_aberta" />

        <Button
            android:id="@+id/abrir_guarra"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Abrir" />

    </GridLayout>

    <Button
        android:id="@+id/novoComando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Novo Comando" />

    <ListView
        android:id="@+id/id_comandos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false" />

</LinearLayout>
